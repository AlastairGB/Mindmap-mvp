# Mind Map AI API Configuration

# Database Configuration
DATABASE_URL=sqlite:///./mindmap.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/mindmap
# For MySQL: DATABASE_URL=mysql://user:password@localhost/mindmap

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=info

# Hugging Face Configuration (Optional)
HF_TOKEN=your_huggingface_token_here
HF_API_BASE_URL=https://api-inference.huggingface.co

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_CREDENTIALS=true

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# AI Pipeline Configuration
AI_PIPELINE_ENABLED=true
AI_FALLBACK_MODE=true
AI_RATE_LIMIT=100  # requests per minute

# Export Configuration
EXPORT_FORMATS=["json", "csv", "xml"]
MAX_EXPORT_NODES=1000
